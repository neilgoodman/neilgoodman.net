<div class="row">

    <!-- Main -->
    <div class="span8">
        {{#each articles}}
            <article class="article">
                <hr class="divider" />

                <h3>
                    <a href="/article/{{name}}">{{title}}</a>
                </h3>

                <ul class="meta">
                    <li><i class="icon-calendar"></i> {{formatDate date "%B %d%k, %Y"}}</li>

                    {{#if categories}}
                        <li><i class="icon-tags"></i> {{categoryList categories}}</li>
                    {{/if}}

                    <li><i class="icon-comment"></i> <a href="/article/{{name}}#disqus_thread">Comments</a></li>
                </ul>

                {{{intro markdown}}}

                <a class="more" href="/article/{{name}}">Read More</a>
            </article>
        {{else}}
            <article class="article">
                <hr class="divider" />

                <h3>No Articles</h3>
                
                <p>There are currently no articles to display.</p>
            </article>
        {{/each}}
    </div>

    <!-- Sidebar -->
    <div class="offset1 span3">
        {{> sidebar-masthead}}

        {{> sidebar-tweets}}
        {{> sidebar-contact}}
        {{> sidebar-categories}}
    </div>

</div>
