<div class="row">

    <!-- Main -->
    <div class="span8">
        <div class="phone-masthead">
            {{> sidebar-masthead}}
        </div>
        
        <ul class="breadcrumb">
            <li><a href="/articles">Articles</a><span class="divider">Â»</span></li>
            <li><a class="active" href="/{{#if article.alias}}{{article.alias}}{{else}}article/{{article.name}}{{/if}}">{{title}}</a></li>
        </ul>

        <div class="articles">
            <article class="article">
                    <hr class="divider" />

                    <h1>
                        <a href="/{{#if article.alias}}{{article.alias}}{{else}}article/{{article.name}}{{/if}}">{{title}}</a>
                    </h1>

                    <ul class="meta">
                        <li><i class="icon-calendar"></i> {{formatDate article.date "%B %d%k, %Y"}}</li>

                        {{#if article.categories}}
                            <li><i class="icon-tags"></i> {{categoryList article.categories}}</li>
                        {{/if}}

                        <li><i class="icon-comment"></i> <a href="/{{#if article.alias}}{{article.alias}}{{else}}article/{{article.name}}{{/if}}#disqus_thread">Comments</a></li>
                    </ul>

                    {{{markdownEncode article.markdown}}}
            </article>

            {{> comments}}
        </div>
    </div>

    <!-- Sidebar -->
    <div class="sidebar offset1 span3">
        {{> sidebar-masthead}}

        {{> sidebar-share}}
        {{> sidebar-article-information}}
        {{> sidebar-contact}}
    </div>

</div>