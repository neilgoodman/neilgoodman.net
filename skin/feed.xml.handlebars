<rss version="2.0" xmlns:content="http://purl.org/rss/1.0/modules/content/" xmlns:wfw="http://wellformedweb.org/CommentAPI/" xmlns:dc="http://purl.org/dc/elements/1.1/" xmlns:atom="http://www.w3.org/2005/Atom">
    <channel>
        <title>How To Node</title>
        <atom:link href="http://howtonode.org/feed.xml" rel="self" type="application/rss+xml" />
        <link>http://howtonode.org</link>
        <description>How To Node is a blog featuring projects and tutorials relating to the Node.js project.</description>
        <pubDate>{{formatNewRFC822Date}}</pubDate>
        <generator>http://github.com/creationix/wheat</generator>
        <language>en</language>
        
        {{#each articles}}
            <item>
                <title>{{title}}</title>
                <link>http://howtonode.org/{{name}}</link>
                <comments>http://howtonode.org/{{name}}#disqus_thread</comments>
                <pubDate>{{formatRFC822Date date}}</pubDate>
                <guid isPermaLink="true">http://howtonode.org/{{name}}</guid>
                <description>{{markdownEncode markdown}}</description>
                <author>
                    {{#if author}}
                        ({{author.email}} ({{author.name}})
                    {{/if}}
                </author>
            </item>
        {{/each}}
    </channel>
</rss>
